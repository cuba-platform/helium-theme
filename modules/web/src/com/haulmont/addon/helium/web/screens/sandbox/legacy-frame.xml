<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.addon.helium.web.screens.sandbox.LegacyFrame"
        messagesPack="com.haulmont.addon.helium.web.screens.sandbox">
    <dsContext>
        <collectionDatasource id="usersDs"
                              class="com.haulmont.cuba.security.entity.User"
                              view="_local">
            <query>
                select e from sec$User e
                where e.login like :(?i)custom$searchString
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupBox caption="SearchField" spacing="true" collapsable="true" collapsed="false">
            <searchField caption="SearchField" optionsDatasource="usersDs"/>
            <searchField id="searchFieldRO" caption="Read-only" editable="false" optionsDatasource="usersDs"/>
            <searchField id="searchFieldD" caption="Disabled" enable="false" optionsDatasource="usersDs"/>
            <searchField id="searchFieldR" caption="Required" required="true" optionsDatasource="usersDs"/>

            <hbox spacing="true">
                <searchField caption="LARGE" stylename="large" optionsDatasource="usersDs"/>
                <searchField caption="Middle" stylename="medium" optionsDatasource="usersDs"/>
                <searchField caption="small" stylename="small" optionsDatasource="usersDs"/>
            </hbox>
        </groupBox>

        <groupBox caption="SearchPickerField" spacing="true" collapsable="true" collapsed="false">
            <searchPickerField caption="SearchPickerField" metaClass="sec$User" optionsDatasource="usersDs"/>
            <searchPickerField id="searchPickerFieldRO" caption="Read-only" editable="false" metaClass="sec$User" optionsDatasource="usersDs"/>
            <searchPickerField id="searchPickerFieldD" caption="Disabled" enable="false" metaClass="sec$User" optionsDatasource="usersDs"/>
            <searchPickerField id="searchPickerFieldR" caption="Required" required="true" metaClass="sec$User" optionsDatasource="usersDs"/>

            <hbox spacing="true">
                <searchPickerField metaClass="sec$User" caption="LARGE" stylename="large" optionsDatasource="usersDs"/>
                <searchPickerField metaClass="sec$User" caption="Middle" stylename="medium" optionsDatasource="usersDs"/>
                <searchPickerField metaClass="sec$User" caption="small" stylename="small" optionsDatasource="usersDs"/>
            </hbox>
        </groupBox>
    </layout>
</window>
